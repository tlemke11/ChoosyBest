<Page xmlns:shared="Views/Shared"
      xmlns="http://schemas.nativescript.org/tns.xsd"
      loaded="onPageLoad">
    <Page.actionBar>
        <shared:main-actionbar/>
    </Page.actionBar>
    <ScrollView class="scrollView">
        <StackLayout>
            <Button text="Add to Favorites" tap="addToBookmarks" />
            <Label class="text-center" text="{{ title }}"/>
            <Label class="text-center" text="{{ author || actors }}"/>
            <Label class="text-center" text="{{ year || releaseDate }}"/>
            <Label class="text-center" text="{{ ean || rating}}"/>
            <Label class="text-center" text="{{ isbn || upc }}"/>
            <Image src="{{ lgImg }}"/>
            <Label class="text-center" text="{{ reviewsIFrame }}"/>
            <WebView src="{{ reviewsIFrame }}"/>
        </StackLayout>
    </ScrollView>
</Page>